<?xml version="1.0" encoding="utf-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="app">textonJava</Property>
        <Property name="basePath">/var/log/texton</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss.SSS}] %-5p - %C{1} - %msg%n"/>
        </Console>
        <RollingFile name="fileLogger" fileName="${basePath}/${app}.log" filePattern="${basePath}/${app}-%d{yyyy-MM-dd}.log">
            append="False">
            <PatternLayout>
                <Pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] %-5p - %C{1} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
                <SizeBasedTriggeringPolicy size="10MB" />
            </Policies>
            <!-- Max 10 files will be created everyday -->
            <DefaultRolloverStrategy max="10">
                <Delete basePath="${basePath}" maxDepth="10">
                    <!-- Delete all files older than 30 days -->
                    <IfLastModified age="30d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
    </Appenders>
    <Loggers>
        <!-- This classes local logger -->
        <!--
    <Logger name="dk.clarin.tools.rest" level="warn" additivity="true">
      <AppenderRef ref="Console"/>
    </Logger>
    -->
        <!-- Catch all logger. Set to debug, if external jars fails -->
        <Root level="warn">
            <AppenderRef ref="fileLogger"/>
        </Root>
    </Loggers>
</Configuration>
